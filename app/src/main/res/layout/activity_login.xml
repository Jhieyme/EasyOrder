<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/img_login"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overbox"
        android:elevation="1dp"
        >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="410dp"
        android:layout_height="179dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="292dp"
        android:orientation="vertical"
        android:padding="40dp"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/loginText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/plex_sans_semibold"
            android:text="Bienvenido"
            android:textAlignment="center"
            android:textColor="@color/blue_500"
            android:textSize="50sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="330dp"
            android:layout_height="31dp"
            android:layout_marginTop="5dp"
            android:elevation="3dp"
            android:alpha="0.7"
            android:text="Por favor inicia sesión con tu información."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="320dp"
        android:layout_height="49dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/login_background"
        android:orientation="horizontal"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.086"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="49dp"
            android:background="@drawable/ic_login_background"
            android:padding="6dp"
            android:src="@drawable/ic_codigo"
            app:tint="#FFFFFF" />

        <EditText
            android:id="@+id/txtCodigo"
            android:layout_width="288dp"
            android:layout_height="49dp"
            android:fontFamily="@font/plex_sans_medium"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Codigo"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="320dp"
        android:layout_height="49dp"
        android:elevation="3dp"
        android:background="@drawable/login_background"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.099"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="49dp"
            android:background="@drawable/ic_login_background"
            android:padding="6dp"
            android:src="@drawable/ic_lock"
            app:tint="#FFFFFF" />

        <EditText
            android:id="@+id/txtContra"
            android:layout_width="288dp"
            android:layout_height="49dp"
            android:fontFamily="@font/plex_sans_medium"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="519dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="102dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="3dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:id="@+id/loginButton"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#5DA0F2"
            android:fontFamily="@font/plex_sans_semibold"
            android:text="INGRESAR"
            android:textSize="14sp"
            app:cornerRadius="20dp"></Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>