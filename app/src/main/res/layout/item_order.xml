<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="215dp">

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:id="@+id/clothingCard"
            android:layout_width="185dp"
            android:layout_height="186dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayout15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/txt_numero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="90dp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="6dp"
                        android:text="#01"
                        android:textColor="#8C8C8C"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.266"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <ImageButton
                        android:id="@+id/btnCancel"
                        android:layout_width="9dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@color/white"
                        android:src="@drawable/ic_close"
                        app:tint="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout15">

                    <TextView
                        android:id="@+id/txt_mesa"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_numero"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="5dp"
                        android:paddingHorizontal="1dp"
                        android:text="Nro mesa: 1"
                        android:textAlignment="center"
                        android:textColor="#8C8C8C"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/txt_fecha"
                        android:layout_width="74dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="40dp"
                        android:layout_toEndOf="@+id/txt_fecha"
                        android:text="MAR., 15 14:45 P.M"
                        android:textAllCaps="true"
                        android:textColor="#D1D1D1"
                        android:textSize="8sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="180dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:background="#2B2B2B"
                    android:elevation="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout14"
                    app:layout_constraintVertical_bias="0.052" />

                <LinearLayout
                    android:id="@+id/linearLayout19"
                    android:layout_width="162dp"
                    android:layout_height="59dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toTopOf="@+id/btn_print"
                    app:layout_constraintTop_toBottomOf="@+id/view2"
                    tools:layout_editor_absoluteX="1dp">

                        <LinearLayout
                            android:id="@+id/layoutDetailProduct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvDetailProduct"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical" />
                        </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_pagar"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@color/teal_200"
                    android:text="Pagar"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout19"
                    app:layout_constraintVertical_bias="0.466" />

                <ImageButton
                    android:id="@+id/btn_print"
                    android:layout_width="49dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_print"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/btn_pagar"
                    app:tint="@color/lavender" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>