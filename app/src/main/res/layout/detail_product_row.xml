<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/clothingCard"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:cardCornerRadius="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">


            <androidx.cardview.widget.CardView
                android:id="@+id/img_product"
                android:layout_width="80dp"
                android:layout_height="80dp"


                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="60dp">

                <ImageView
                    android:id="@+id/imgProduct2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/productimg"
                    android:contentDescription="@null" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/txtNameDetail"
                android:layout_width="175dp"
                android:layout_height="wrap_content"


                android:layout_alignTop="@+id/img_product"
                android:layout_alignParentStart="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="6dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:text="Producto"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtQntDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignTop="@+id/img_product"
                android:layout_alignBottom="@+id/img_product"
                android:layout_marginStart="0dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="21dp"
                android:layout_toStartOf="@+id/img_product"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPriceDetail"
                android:layout_width="116dp"
                android:layout_height="28dp"
                android:layout_below="@+id/txtNameDetail"
                android:layout_alignStart="@+id/txtNameDetail"
                android:layout_alignBottom="@+id/img_product"
                android:layout_marginStart="0dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="4dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:text="S/ 00.00"
                android:textColor="@color/lavender"
                android:textSize="13sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>